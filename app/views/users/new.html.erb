Sign up form
<br />
<%= form_for @user do |u| %>
	<%= u.label :email, "Email" %><%=u.text_field :email %><br />
	
	<%= u.label :password, "Password" %><%=u.text_field :password %><br />

	<%= u.label :password_confirmation, "Confirm" %><%=u.text_field :password_confirmation %><br />


	
	<%= u.submit %>
<% end %>
<hr />

User id: <%= session[:user_id] %>
